<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="data" type="com.example.test.main.MainViewModel" />
    </data>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@{data.data.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:text="@{data.data.id}"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/button"
                android:gravity="center|center_horizontal|center_vertical"
                android:onClick="@{() -> data.onClickAddCount()}"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <Button
                android:text="Next"
                android:clickable="@{data.checkable ?? false}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonNext"
                app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@{data.text}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mirrorText"
                app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText" app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>